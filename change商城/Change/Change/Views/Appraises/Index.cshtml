@model IEnumerable<Change.Models.Appraise>

@{
    ViewBag.Title = "评价管理";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @(item.Grade==0?"好评": item.Grade == 1 ? "中评":"差评")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RateTime)
        </td>
        <td>
            <a href="/Products/DetailsRate/@item.ProductId">@Html.DisplayFor(modelItem => item.Product.Title) </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserName)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.AppraiseId }) |
            @Html.ActionLink("详情", "Details", new { id=item.AppraiseId }) |
            @Html.ActionLink("删除", "Delete", new { id=item.AppraiseId })
        </td>
    </tr>
}

</table>
