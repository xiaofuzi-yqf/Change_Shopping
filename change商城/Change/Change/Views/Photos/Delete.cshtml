@model Change.Models.Photo

@{
    ViewBag.Title = "删除图片";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>删除图片</h2>

<h3>是否确认删除?</h3>
<div>
    <h4>图片信息</h4>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            所属商品：
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Title)
        </dd>

        <dt>
            图片：
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.PhotoUrl)" />
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=" 确认删除 " class="btn btn-default" /> |
            @Html.ActionLink("返回图片列表", "Create",new { id=Model.ProductId})
        </div>
    }
</div>
