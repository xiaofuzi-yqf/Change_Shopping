@model AdminUser
@{
    ViewBag.Title = "管理后台登录";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change商城-后台 - @ViewBag.Title</title>
    <link href="/css/globalAdmin1.css" rel="stylesheet" type="text/css">
    <link href="/css/Site.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="center">
        <!--头部-->
        <div id="logo">
            <ul>
                <li><img src="/images/logo/ChangeWorld.png" alt="Change后台管理" /></li>
            </ul>
        </div>
        <!--中间内容-->
        <div id="content">
            <div id="indexLogin">
                <h2>@ViewBag.Title</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "text", @placeholder = "请输入用户名" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Pwd, htmlAttributes: new { @class = "text", @placeholder = "请输入密码" })
                                @Html.ValidationMessageFor(model => model.Pwd, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value=" 登录 " class="btn" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!--底部-->
        <div id="copytop"></div>
        <div id="copy">
            <p>©2016 Change Technology official website retains all rights.鄂ICP备16001830号</p>
        </div>
    </div>
</body>
</html>